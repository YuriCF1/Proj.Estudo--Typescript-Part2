    "compilerOptions": {
        "outDir": "app/dist/js",
        "target": "ES6",
        "noEmitOnError": true,
        "noImplicitAny": true,

        // Parte 2
        "removeComments": true,
        "strictNullChecks": true,

        // Parte 3
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "include": ["app/src/**/*"]
}